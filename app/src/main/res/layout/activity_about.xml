<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".About">

    <de.hdodenhof.circleimageview.CircleImageView
        android:onClick="shakeView"
        android:src="@mipmap/ic_launcher_round"
        android:padding="10dp"
        android:layout_width="150dp"
        android:layout_height="150dp" />

   <LinearLayout
       android:orientation="horizontal"
       android:gravity="center|bottom"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:textSize="28sp"
           android:fontFamily="@font/viga"
           android:textColor="@color/colorAccent"
           android:text="Trivia"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <TextView
           android:layout_marginStart="5dp"
           android:textSize="18sp"
           android:fontFamily="@font/viga"
           android:text="v 1.2.0"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

   </LinearLayout>

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:padding="10dp"
        app:cardMaxElevation="6dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="6dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:text="Feedback / Bugs"
                android:fontFamily="@font/viga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center_vertical"
                android:onClick="openEmail"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_email_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:text="Send mail"
                    android:fontFamily="@font/viga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardUseCompatPadding="true"
        android:padding="10dp"
        app:cardMaxElevation="6dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="6dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/colorAccent"
                android:text="About me"
                android:fontFamily="@font/viga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:onClick="openGooglePlay"
                android:gravity="center_vertical"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_person_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:text="Created by Amsavarthan Lv"
                    android:fontFamily="@font/viga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:onClick="openWebsite"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_public_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:text="Checkout my website for more apps"
                    android:fontFamily="@font/viga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:onClick="openGithub"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginStart="2dp"
                    android:tint="@color/white"
                    android:src="@drawable/github"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:text="Github profile"
                    android:fontFamily="@font/viga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center_vertical"
                android:onClick="openInstagram"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_marginStart="2dp"
                    android:src="@drawable/instagram"
                    android:tint="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginStart="5dp"
                    android:textColor="@color/white"
                    android:text="Instagram profile"
                    android:fontFamily="@font/viga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>